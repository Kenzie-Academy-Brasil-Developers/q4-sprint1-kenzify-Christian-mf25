{
  "compilerOptions": {
    "target": "es2016",
    "module":"CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "src/@types/**",
      "node_modules/@types"
    ],
    "moduleResolution": "node"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}